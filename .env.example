# ==========================================
# Minecraft Server Manager - Environment Configuration
# ==========================================

# ==========================================
# SERVER CONFIGURATION
# ==========================================
# Server port (default: 3000)
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# JWT Secret for authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT Token Expiration (e.g., 1h, 7d, 30d)
JWT_EXPIRES_IN=7d

# CORS Allowed Origins (comma-separated, e.g., https://yourdomain.com,https://app.yourdomain.com)
# Leave empty or set to * for development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting - Max requests per 15 minutes per IP
RATE_LIMIT_MAX=100

# ==========================================
# MINECRAFT SERVER RCON (Legacy - for RCON Console Tab)
# ==========================================
# Default RCON connection settings
MC_SERVER_HOST=localhost
MC_SERVER_PORT=25575
MC_SERVER_PASSWORD=your_rcon_password_here

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Data directory path (relative to project root)
DATA_DIR=./data

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
# Backup directory path
BACKUP_DIR=./backups

# Maximum backup age in days (automatic cleanup)
BACKUP_MAX_AGE_DAYS=30

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
# Resource monitoring interval in milliseconds (default: 5000)
MONITORING_INTERVAL=5000

# Proxy backend monitoring interval in milliseconds (default: 30000)
PROXY_MONITORING_INTERVAL=30000

# ==========================================
# WEBHOOK/NOTIFICATION CONFIGURATION
# ==========================================
# Discord webhook URL for notifications (optional)
DISCORD_WEBHOOK_URL=

# Webhook timeout in milliseconds (default: 5000)
WEBHOOK_TIMEOUT=5000

# ==========================================
# FILE PATHS
# ==========================================
# Minecraft servers directory
MINECRAFT_SERVERS_DIR=./minecraft_servers

# Logs directory
LOGS_DIR=./logs

# ==========================================
# ADVANCED SETTINGS
# ==========================================
# Enable debug logging (true/false)
DEBUG=false

# Maximum log file size in MB
MAX_LOG_SIZE=10

# Number of log files to keep
MAX_LOG_FILES=5

# Socket.IO ping timeout (milliseconds)
SOCKET_PING_TIMEOUT=60000

# Socket.IO ping interval (milliseconds)
SOCKET_PING_INTERVAL=25000

# ==========================================
# PRODUCTION DEPLOYMENT NOTES
# ==========================================
# 1. Change JWT_SECRET to a strong random string (use: openssl rand -base64 32)
# 2. Set NODE_ENV=production
# 3. Configure ALLOWED_ORIGINS with your actual domain(s)
# 4. Set up HTTPS with Nginx/Caddy reverse proxy
# 5. Adjust RATE_LIMIT_MAX based on expected traffic
# 6. Configure Discord webhooks for notifications
# 7. Set up automated backups with BACKUP_MAX_AGE_DAYS
# 8. Monitor logs and resource usage
# 9. Use PM2 for process management (pm2 start server/index.js --name mc-manager)
# 10. Set up firewall rules to restrict access to ports 25565+

